package com;

public class BaseClass {
	public static void main(String args[]) {
		int num = 5;

		int row = num;
		int column = num + 1;
		int count = 0;
		int start = 1;

		int[] resultantArr = new int[column];

		for (int i = 0; i < resultantArr.length; i++) {
			resultantArr[i] = 0;
		}

		for (int i = 0; i < row; i++) {
			int difference = num - i - 1;
			int increment = num;
			int k = 0;
			if(i == 0 || i == 1) {
				System.out.print(" ");
			}
			resultantArr[k] = start;
			System.out.print(resultantArr[k] + " ");
			k++;
			while (difference != 0) {
				resultantArr[k] = resultantArr[k-1] + increment;
				System.out.print(resultantArr[k] + " ");
				increment--;
				difference--;
				k++;
			}

			start++;
			System.out.println();
		}
	}
}
