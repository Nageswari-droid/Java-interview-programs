package com;

public class BaseClass {
	public static void main(String args[]) {
		int num = 6;
		
		int row = num;
		int column = num + 1;
		int count = 0;
		int start= 1;
		
		int[] resultantArr = new int[column];
		
		for(int i = 0 ; i < resultantArr.length ; i++) {
			resultantArr[i] = 0;
		}
		
		for(int i = 0 ; i < row ; i++) {
			int difference = num - i;
			int increment = num;
			for(int j = 0 ; j < column ; j++ ) {
				while(difference != 0) {
					resultantArr[i] = start + increment;
					System.out.print(resultantArr[i] + " ");
					increment--;
					difference--;
				}
			}
			start++;
			System.out.println();
		}
	}
}
